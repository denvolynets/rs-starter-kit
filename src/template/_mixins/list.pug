- var staticPath = "./assets/";

include ../components/header/header
include ../components/footer/footer
include ../components/breadcrumb/breadcrumb
include ../components/btn/btn
include ../components/carousel/carousel
include ../components/popups/popups
include ../components/formField/formField


mixin title(...titleParts)
	- var t = "AntTrans"
	each titlePart in titleParts.reverse()
		- t = titlePart + " / " + t
	title #{t}

mixin statcss(href)
	link(rel="stylesheet" href=href)

mixin statjs(href)
	script(src=href)
	
mixin radio(text)
	input(type="radio")&attributes(attributes)
	label(for=attributes.id)=text
	
mixin checkbox(text)
	input(type="checkbox")&attributes(attributes)
	label(for=attributes.id)=text

mixin selectBox(options, defaultText)
	select&attributes(attributes)(data-default-text=`${defaultText ? defaultText : ''}`)
		each option in options
			if (option == '')
				option(value="", data-display="Выберите значение") Выберите значение
			else
				option(value=option)=option