extends ../_layouts/master.pug
block title
	+title("Redsoft UI Kit")
block content
	.container
		.b-component
			ul
				each item in $data.headerLink
					li
						a(href=item.link)=item.name
		.b-component
			ul
				each item in $data.footerLink(10)
					li
						a(href=item.link)=item.name
		.b-buttons.b-component
			h3.h3 1. Кнопки
			+btn() btn-primary
			+btn('fill') btn-fill
			+btn('border') btn-border
			+btn('fill','submit', false, 'btn-submit')
		.b-forms.b-component
			h3.h3 2. Формы
			form.rs-form(id="rsform")
				+rsForm('text', '', 'ФИО')
				+rsForm('tel', '','Телефон', 'true')
				+rsForm('text', 'date-input','Дата', 'true')
				+rsForm('password', '','Пароль', 'true')
				+rsForm('text', '', 'Ваше сообщение...', 'true', true)
				.rs-form__footer
					input(type="submit", value="Отправить", class='btn btn-fill btn-submit')

		.b-carousel.b-component
			h3.h3 3. Слайдеры
			+carousel()
		.b-typographie.b-component
			h3.h3 4. Заголовки
				h1.h1 Redsoft h1
				h2.h2 Redsoft h2
				h3.h3 Redsoft h3
				h4.h4 Redsoft h4
				h5.h5 Redsoft h5
				h6.h6 Redsoft h6
			