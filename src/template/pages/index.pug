extends ../_layouts/master.pug
block title
	+title("Redsoft UI Kit")
block content
	.container
		.b-component
			ul
				each item in $data.headerLink
					li
						a(href=item.link)=item.name
		.b-component
			ul
				each item in $data.footerLink(10)
					li
						a(href=item.link)=item.name
		.b-buttons.b-component
			h3.h3 1. Кнопки
			+btn() btn-primary
			+btn('fill') btn-fill
			+btn('border') btn-border
			+btn('fill','submit', false, 'btn-submit')
		.b-forms.b-component
			h3.h3 2. Формы
			form.rs-form
				//- +rsForm('text', '', 'ФИО')
				//- +rsForm('tel', '','Телефон', '{"type":"numbersCount","minL":11,"message": "В поле Телефон недостаточно символов"}')
				//- +rsForm('email', '', 'E-mail', '{"type":"email","message": "Некорректный E-mail"}')
				//- +rsForm('text', 'date-input','Дата', '{"type":"numbersCount","minL":10,"message": "В поле Дата недостаточно символов"}')
				//- +rsForm('password', '','Пароль', '{"type":"default","message": "Поле обязательно для заполнения"}')
				//- +rsForm('text', '', 'Ваше сообщение...', '{"type":"default","message": "Поле обязательно для заполнения"}', true)
				+rsForm('email', '', 'E-mail')(name="email", required)
				+rsForm('text', '', 'ФИО')(data-msg="Поле ФИО обязательно для заполнения", name="fio", minlength="3", required)
				.rs-form__footer
					input(type="submit", value="Отправить", class='btn btn-fill btn-submit btn-validate')

		.b-carousel.b-component
			h3.h3 3. Слайдеры
			+carousel()
		.b-typographie.b-component
			h3.h3 4. Заголовки
				h1.h1 Redsoft h1
				h2.h2 Redsoft h2
				h3.h3 Redsoft h3
				h4.h4 Redsoft h4
				h5.h5 Redsoft h5
				h6.h6 Redsoft h6
			